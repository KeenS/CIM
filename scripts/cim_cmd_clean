#!/bin/sh -
# This file is for execute
. "$CIM_HOME/scripts/cim_utils"

while [ $# -gt 0 ];do
    if [ "$1" = "all" ] ;then
	set -- `cim list clean | grep -v '\(Subcommand\|^#\)'`
	continue
    fi
    impl=`cim_normarize_impl_version "$1"`
    if [ -z "$impl" ]; then
        cim_error "Error: cim_cmd_clean: invalid argument '$1'"
        exit 1
    fi
    rm -rf "$CIM_HOME/archives/$impl".*
    rm -rf "$CIM_HOME/src/$impl"
    shift
done
